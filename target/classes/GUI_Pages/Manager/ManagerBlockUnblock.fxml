<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="def_pkg.Controllers.ManagerCon.BlockUnblockController">
    <Pane prefHeight="700" prefWidth="1100" style="-fx-background-color: #f5f7fa;">
        <Pane prefHeight="100" prefWidth="1100" style="-fx-background-color: #4a6fa5; -fx-background-radius: 0 0 20 20;">
            <Label layoutX="30" layoutY="25" style="-fx-text-fill: white; -fx-font-size: 24;" text="Block/Unblock Account">
                <font><Font name="Segoe UI Bold" size="24.0" /></font>
            </Label>
            <Button fx:id="backButton" layoutX="950" layoutY="30" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 15;" text="BACK"/>
        </Pane>

        <GridPane layoutX="350" layoutY="150" hgap="10" vgap="15">
            <Label text="Account Number:"/>
            <TextField fx:id="accountNumberField"/>
            <Label text="Action:" GridPane.rowIndex="1"/>
            <ComboBox fx:id="actionCombo" GridPane.rowIndex="1"/>
            <Button fx:id="submitButton" text="SUBMIT" GridPane.rowIndex="2" GridPane.columnSpan="2"/>
        </GridPane>
    </Pane>
</AnchorPane>